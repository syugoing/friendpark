<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <h2>ユーザー詳細</h2>
    <p id="notice"><%= notice %></p>

      <div class="child row">
        <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
          <div class="user-text">
            <%= profile_img(@user) if profile_img(@user) %>
            <h3 style="display:inline;"><strong>&nbsp;&nbsp;&nbsp;name:&nbsp;&nbsp;<%= @user.name  %></strong></h3>
            <div class="row">
              <div class="col-xs-6"><h4>フォロー数:&nbsp;<%= @user.followed_users.count  %></h4>
                <% @user.followed_users.each do |user| %>
                <%= render 'follow_user', user: user  %>
                <% end %>
              </div>
              <div class="col-xs-6"><h4>フォロワー数：&nbsp;<%= @user.followers.count  %></h4>
                <% @user.followers.each do |user| %>
                <%= render 'follow_user', user: user  %>
                <% end %>
              </div>
            </div>

            <div class="skill">
              <h2>スキル・特徴</h2>
              <ul class="profile-entries">
                <li>aaaa</li>
                <li>bbbb</li>
              </ul>
            </div>

          </div>
        </div>
        <p style="text-align:center;"><%= link_to 'プロフィール編集', edit_user_registration_path, class: 'btn btn-default btn-sm btn-success'  %></p>
      </div>

    <%= link_to "ユーザー一覧画面にもどる", users_path %>

  </div>
</div>
